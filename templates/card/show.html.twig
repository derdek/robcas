{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ card.title }}</td>
            </tr>
            <tr>
                <th>Card_type</th>
                <td>{{ card.cardType }}</td>
            </tr>
            <tr>
                <th>Card_action</th>
                <td>{{ card.cardAction }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ card.description }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ card.level }}</td>
            </tr>
            <tr>
                <th>Level_reward</th>
                <td>{{ card.levelReward }}</td>
            </tr>
            <tr>
                <th>Treasure_reward</th>
                <td>{{ card.treasureReward }}</td>
            </tr>
            <tr>
                <th>Lose_description</th>
                <td>{{ card.loseDescription }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_card_index') }}">back to list</a>

    <a href="{{ path('app_card_edit', {'id': card.id}) }}">edit</a>

    {{ include('card/_delete_form.html.twig') }}
{% endblock %}
